<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>我的日报</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.css" />
    <link rel="stylesheet" href="/mobile/css/reportStyle.css" />
    <script src="/js/jquery-1.9.1.min.js"></script>
    <script src="/js/jquery.mobile-1.3.1.min.js"></script>
    <script type="text/javascript" src='/mobile/js/Model.js'></script>
    <script type="text/javascript" src='/js/validator-min.js'></script>
    <script type="text/javascript" src='/mobile/js/main.js'></script>
</head>
<body>
<div data-role="page" id="showPage">
    <div data-role="header" data-position="fixed">
        <h1>我的日报</h1>
        <a href="/m/setting" data-icon="gear" class="ui-btn-right">设置</a>
    </div>
    <div data-role="content">
        <article id="reportList" >
            <ul></ul>
        </article>
        <div class="ui-grid-d pageination">
            <div class="ui-block-a" title="前一页" style="text-align: center;"><div class="pagePre" ><button data-icon="arrow-l" data-iconpos="notext" data-inline="true"></button></div></div>
            <div class="ui-block-b"></div>
            <div class="ui-block-c pagetip" style="text-align: center;padding-top: 15px;">1/1</div>
            <div class="ui-block-d"></div>
            <div class="ui-block-e" title="下一页" style="text-align: center;"><div class="pageNext" ><button data-icon="arrow-r" data-iconpos="notext" data-inline="true"></button></div></div>
        </div>
    </div>

    <div data-role="footer" data-position="fixed">
         <div data-role="navbar" data-iconpos="left">
             <ul>
                 <li><a href="/m/write" data-icon="edit">写日报</a></li>
                 <li><a href="#" data-icon="bars" class="ui-btn-active">我的日报</a></li>
                 {{#if hasSubordinate}}
                 <li><a href="/m/showsubordinate" data-icon="grid">下属日报</a></li>
                 {{/if}}
             </ul>
         </div>
    </div>

    <div data-role="popup" id="deleteReportMenu" data-theme="a">
        <div style="padding: 20px;">
            <button id="deleteReportBtn" value="删除日报" data-theme="b"></button>
            <button id="cancelDeleteReportBtn" value="取消" data-theme="e"></button>
        </div>
    </div>
</div>
<script>
    $("#showPage").bind("pagecreate", function(e) {
        init();
    });
</script>
</body>
</html>